---
interface Props {
  title: string;
}
const { title } = Astro.props as Props;
---

<div
  class="bg-yellow-500 py-4 px-8 text-center w-fit mx-auto border-brutal-lg relative"
>
  <img
    class="opacity-50 -z-10 absolute -top-8 -left-8"
    src="/deco1.svg"
    alt=""
  />
  <img
    class="opacity-50 -z-10 absolute -bottom-8 -right-8"
    src="/deco1.svg"
    alt=""
  />
  <h2 class="uppercase relative text-balance">{title}</h2>
</div>
